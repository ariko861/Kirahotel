div(id='addMaterialForm', class='popupform', ng-show="showMaterialForm" )
	div(class='background', ng-click="cancelAddMaterial()")
	div(class='lightbox')
		form(name="materialForm", ng-submit="materialForm.$valid && addMaterial()")
			h3 #{__("Add a new material for")} {{displayContent(sector_actif.name)}}
			div(class="form-horizontal")
				div(class="form-group" ng-repeat="language in list_languages")
					label(class="control-label col-sm-4") #{__('Material name in')} {{language.translated_name}}
					div(class="col-sm-8")
						input(class="form-control" ng-model="newmaterial.names[language._id]", type="text", required, placeholder="{{language.translated_name}}")
				
				div(class="form-group")
					label(class="control-label col-sm-4") #{__('Unit')}
					div(class="form-inline col-sm-8")
						input(class="form-control" ng-model="newmaterial.unit", type="text", required)
				
				p #{__("Sector")} : {{displayContent(sector_actif.name)}}
				
				div(class="form-group")
					div(class="col-sm-4")
						input(type="button", class="btn btn-warning", value="#{__('Cancel')}", ng-click="cancelAddMaterial()")
					div(class="col-sm-8")
						input(type="submit", class="btn btn-default", value="#{__('Create new material')}")


