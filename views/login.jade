extends layout

block content
	div
	
		h1= Login
		p #{__('You must be logged in to access this page')}
		
		form(name="loginForm" action='' method="POST")
			div(class="form-group")
				label(for="username") #{__('Your user name')} :
				input(name="username", class="form-control", id="username", type="text", placeholder="#{__('Username')}", autofocus)
				if (wronguser)
					span(class='formerror') #{__('You entered a wrong user')}
			br
			div(class="form-group")
				label(for="password") #{__('Your password')} :
				input(name="password", class="form-control", id="password", placeholder="#{__('Password')}", type="password")
				if (wrongpass)
					span(class='formerror') #{__('You entered a wrong password')}
			br
			input(type="submit", class="btn btn-default", value="#{__('Submit')}")
		
			
		
